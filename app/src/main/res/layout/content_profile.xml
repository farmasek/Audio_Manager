                    android:text="@string/opakovani"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <include layout="@layout/separator" />

                <include layout="@layout/togglebuttons_days" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
